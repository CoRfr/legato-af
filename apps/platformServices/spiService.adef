version: 0.1.0
sandboxed: true
start: auto

executables:
{
    spiService = ( $LEGATO_ROOT/components/spiService )
}

processes:
{
    envVars:
    {
        LE_LOG_LEVEL = INFO
    }

    run:
    {
        (spiService)
    }

    faultAction: restart
    watchdogTimeout: 30000
}

requires:
{
    device:
    {
        [rw] /dev/spidev0.0 /dev/
    }
}

extern:
{
    spiService.spiService.le_spi
}

bindings:
{
    spiService.watchdogChain.le_wdog -> <root>.le_wdog
}
