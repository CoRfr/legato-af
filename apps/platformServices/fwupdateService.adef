
sandboxed: false

executables:
{
    fwupdateDownloader = ( $LEGATO_ROOT/components/fwupdate/fwupdateDownloader )
    fwupdateDaemon = ( $LEGATO_ROOT/components/fwupdate/fwupdateDaemon )
}

processes:
{
    run:
    {
        (fwupdateDownloader)
        (fwupdateDaemon)
    }

    faultAction: restart
}

extern:
{
    fwupdateDaemon.fwupdateDaemon.le_fwupdate
}

bindings:
{
    fwupdateDownloader.fwupdateDownloader.le_fwupdate -> fwupdateDaemon.fwupdateDaemon.le_fwupdate
}
